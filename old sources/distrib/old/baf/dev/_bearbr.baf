///////////////////////////////////////////////////////////////////////
// Brown Bear
///////////////////////////////////////////////////////////////////////

/////////////////////////////////////////////////////////////////////
// Bear turn hostile if someone come too close
/////////////////////////////////////////////////////////////////////
IF
	Range([GOODCUTOFF],7)
	Allegiance(Myself,NEUTRAL)
THEN
	RESPONSE #100
		Enemy()
END


/////////////////////////////////////////////////////////////////////
// Druids are friends
/////////////////////////////////////////////////////////////////////
IF
	Delay(5)
	See(NearestEnemyOf(Myself))
	Class(NearestEnemyOf(Myself),DRUID)
	NumCreatureGT([ENEMY],1)
THEN
	RESPONSE #100
		RandomWalk()
END

IF
	Delay(5)
	See(NearestEnemyOf(Myself))
	Class(NearestEnemyOf(Myself),RANGER)
	NumCreatureGT([ENEMY],1)
THEN
	RESPONSE #100
		RandomWalk()
END


/////////////////////////////////////////////////////////////////////
// Fear of fire - Disable because not mention in P&P
/////////////////////////////////////////////////////////////////////
IF
	HitBy([ANYONE],FIRE)
	False()
THEN
	RESPONSE #100
		SetInterrupt(FALSE)
		RunAwayFrom(LastAttackerOf(Myself),200)
		SetInterrupt(TRUE)
END

